{
  "env": {
    "es6": true,
    "jest": true,
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "DEBUG": false
  },
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      { "singleQuote": true, "trailingComma": "es5" }
    ],
    "react/prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "linebreak-style": 1,
    "jsx-a11y/alt-text": 0,
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ]
    }],
    "react/prefer-stateless-function": [1],
    "import/prefer-default-export": [1],
    "no-unused-vars": [1],
    "react/sort-comp": [
      1,
      {
        "order": [
          "type-annotations",
          "constructor",
          "state",
          "static-methods",
          "everything-else",
          "/^on.+$/",
          "/^handle.+$/",
          "/^helper.+$/",
          "/^render.+$/",
          "lifecycle",
          "render"
        ]
      }
    ]
  }
}
